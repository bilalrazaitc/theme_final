<div class="account-form">
  <div class="account-form__wrapper">
    <h1 class="account-form__title heading--underline">Activate account</h1>
    {%- form 'activate_customer_password', class: 'account-form__form' -%}
      {%- if form.errors -%}
        <div class="account-form__validation">
          <p class="account-form--error">{% render 'icon-error' %} Please adjust the following:</p>
          {{ form.errors | default_errors }}
        </div>
      {%- endif -%}
      <div class="field">
        <div class="field__group">
          <label for="contact-email" class="field__label">Password</label>
          <input
            id="contact-email"
            type="password"
            name="customer[password]"
            value=""
            class="field__input {% if form.errors contains 'password' %}field__input--error{% endif %}" />
        </div>
        <div class="field__group">
          <label for="contact-phone" class="field__label">Confirm password</label>
          <input
            id="contact-phone"
            type="password"
            name="customer[password_confirmation]"
            value=""
            class="field__input {% if form.errors contains 'password_confirmation' %}field__input--error{% endif %}" />
        </div>
        <div class="field__group">
          <button class="btn btn--primary btn--block">Activate account</button>
        </div>
        <div class="field__group">
          <button name="decline" class="btn btn--primary btn--block">Decline invitation</button>
        </div>
      </div>
    {%- endform -%}
  </div>
</div>