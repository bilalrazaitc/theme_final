<div class="image-with-text-overlay">
    <div class="image-with-text-overlay__container">
            {% if section.settings.desktop_image %}
            {{ section.settings.desktop_image | image_url: width: 2000 | image_tag: class:'lazyload show--desktop' }}
            {% if section.settings.mobile_image %}
            {{ section.settings.mobile_image | image_url: width: 2000 | image_tag: class:'lazyload show--mobile' }}
            {% endif %}
            {% else %}
            {{ 'lifestyle-1' | placeholder_svg_tag }}
            {% endif %}
            <div class="image-with-text-overlay__overlay image-with-text-overlay--{{ section.settings.overlay_align }}">
                <div class="image-with-text-overlay__overlay-content text--{{ section.settings.overlay_content_align }}">
                  <h2>{{ section.settings.title }}</h2>
                  <p>{{ section.settings.subtitle }}</p>
                  <a href="{{ section.settings.link }}" class="btn btn--primary">{{ section.settings.link_text }}</a>
                </div>
            </div>
    </div>
</div>


<style>
  .show--mobile{
    display: none;
  }
.image-with-text-overlay{

}
.image-with-text-overlay__container{
position: relative;
}
.image-with-text-overlay__container img{
  min-height: 650px;
    max-height: 900px;
    object-fit: cover;
}
.image-with-text-overlay__overlay{
position: absolute;
width: 100%;
height: 100%;
top: 0;
left: 0;
z-index: 2;
display: flex;
padding: 80px;
}
.image-with-text-overlay--top-left{
align-items: flex-start;
justify-content: flex-start;
}
.image-with-text-overlay--top-middle{
  align-items: flex-start;
justify-content: center;
}
.image-with-text-overlay--top-right{
  align-items: flex-start;
justify-content: flex-end;
}
.image-with-text-overlay--center{
  align-items: center;
justify-content: center;
}
.image-with-text-overlay--bottom-left{
  align-items: flex-end;
justify-content: flex-start;
}
.image-with-text-overlay--bottom-middle{
  align-items: flex-end;
justify-content: center;
}
.image-with-text-overlay--bottom-right{
  align-items: flex-end;
justify-content: flex-end;
}
.image-with-text-overlay__overlay-content{
  background-color: white;
    max-width: 480px;
    padding: 100px 45px 80px 45px;
}
.image-with-text-overlay__overlay-content h2{
margin: 0;
}
.image-with-text-overlay__overlay-content p{
margin: 0;
margin-top: 25px;
}
.image-with-text-overlay__overlay-content a{
  display: inline-flex;
  align-items: center;
  justify-content: center;
  margin-top: 50px;
}

@media screen and (max-width: 767px){
  .image-with-text-overlay__overlay-content{
    text-align: center;
    max-width: 400px;
    padding: 50px 30px;
  }
  .image-with-text-overlay__overlay{
    align-items: flex-end;
    justify-content: center;
  }
  .image-with-text-overlay__overlay{
    padding: 30px;
  }
  {% if section.settings.mobile_image %}
  #shopify-section-{{ section.id }} .show--desktop{
    display: none;
  }
  #shopify-section-{{ section.id }} .show--mobile{
    display: block;
  }
  {% endif %}
}
</style>

{% schema %}
{
    "name": "Image with text overlay",
   "settings": [
   {
    "type": "image_picker",
    "id": "desktop_image",
    "label": "Desktop Image"
},
{
  "type": "image_picker",
  "id": "mobile_image",
  "label": "Mobile Image"
},
{
    "type": "text",
    "id": "title",
    "label": "Title",
    "default": "Your title here"
},
{
    "type": "textarea",
    "id": "subtitle",
    "label": "Subtitle",
    "default": "Your subtitle here"
},
{
    "type": "text",
    "id": "link_text",
    "label": "Link text",
    "default": "Your text here"
},
{
    "type": "url",
    "id": "link",
    "label": "Link"
},
{
  "type": "select",
  "id": "overlay_align",
  "label": "Overlay alignment",
  "options": [
    {
      "value": "top-left",
      "label": "Top Left"
    },
    {
      "value": "top-middle",
      "label": "Top Middle"
    },
    {
      "value": "top-right",
      "label": "Top Right"
    },
    {
      "value": "center",
      "label": "Center"
    },
    {
      "value": "bottom-left",
      "label": "Bottom Left"
    },
    {
      "value": "bottom-middle",
      "label": "Bottom Middle"
    },
    {
      "value": "bottom-right",
      "label": "Bottom Right"
    }
  ],
  "default": "center"
},
{
  "type": "select",
  "id": "overlay_content_align",
  "label": "Overlay Content alignment",
  "options": [
    {
      "value": "left",
      "label": "Left"
    },
    {
      "value": "center",
      "label": "Center"
    },
    {
      "value": "right",
      "label": "Right"
    }
  ],
  "default": "left"
}
   ],
  "presets": [
    {
        "name":"Image with text overlay"
    }
  ]
}
{% endschema %}