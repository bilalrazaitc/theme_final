<div class="richtext">
    <div class="richtext__container">
        <h2 class="richtext__heading heading--underline">{{ section.settings.heading }}</h2>
        <p class="richtext__subheading">{{ section.settings.subheading }}</p>
        <div class="richtext__link-container">
        <a href="{{ section.settings.link_1 }}" class="btn btn--primary">{{ section.settings.link_text_1 }}</a>
        <a href="{{ section.settings.link_2 }}" class="btn btn--primary">{{ section.settings.link_text_2 }}</a>
    </div>
    </div>
</div>

<style>
.richtext{

}
.richtext__container{
padding: 45px;
}
.richtext__heading{
text-align: center;
font-weight: 600;
margin-bottom: 20px;
padding: 0 5px;
}
.richtext__subheading{
text-align: center;
font-size: 18px;
margin-bottom: 40px;
padding: 0 5px;
}
.richtext__link-container{
display: flex;
justify-content: center;
flex-wrap: wrap;
}
.richtext__link-container a{
    margin: 5px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
}

@media screen and (max-width: 767px){
.richtext__container{
        padding: 20px;
    }
}
@media screen and (max-width: 480px){
    .richtext__link-container a{
        max-width: 100%;
        display: flex;
    }
    .richtext__subheading{
        margin-bottom: 25px;
    }

}
</style>

{% schema %}
{
    "name": "Richtext",
   "settings": [
   {
    "type": "text",
    "id": "heading",
    "label": "Heading",
    "default": "Your heading here"
},
{
    "type": "textarea",
    "id": "subheading",
    "label": "Subheading",
    "default": "Your subheading here"
},
{
    "type": "text",
    "id": "link_text_1",
    "label": "Link Text",
    "default": "Your text here"
},
{
    "type": "url",
    "id": "link_1",
    "label": "Link"
},
{
    "type": "text",
    "id": "link_text_2",
    "label": "Link Text",
    "default": "Your text here"
},
{
    "type": "url",
    "id": "link_2",
    "label": "Link"
}
 
   ],
  "presets": [
    {
        "name":"Richtext"
    }
  ]
}
{% endschema %}