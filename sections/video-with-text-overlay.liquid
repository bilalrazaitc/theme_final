<div class="video-with-text-overlay">
  <div class="video-with-text-overlay__container">
    {% if section.settings.video %}
      <video
        muted
        autoplay
        loop
        class="video-with-text-overlay__video">
        <source src="{{section.settings.video}}" type="video/mp4">
        <source src="{{ section.settings.video }}" type="video/ogg">
        Your browser does not support the video tag.
      </video>
    {% else %}
      {% if section.settings.video_url %}
        <div class="video-with-text-overlay__iframe-wrapper">
          <iframe
            width="420"
            height="315"
            src="https://www.youtube.com/embed/{{section.settings.video_url.id}}?autoplay=1&mute=1&loop=1&controls=0"></iframe>
        </div>
      {% else %}
        {{ 'lifestyle-1' | placeholder_svg_tag }}
      {% endif %}
    {% endif %}
    <div class="video-with-text-overlay__overlay justify--{{ section.settings.overlay_content_align }}">
      <div class="video-with-text-overlay__overlay-content text--{{ section.settings.overlay_content_align }}">
        <h2 {% if section.settings.heading_underline %}class="heading--underline"{% endif %} style="font-size: {{ section.settings.heading_size }};">{{ section.settings.heading }}</h2>
        <p>{{ section.settings.subheading }}</p>
        <a href="{{ section.settings.link }}" class="btn btn--primary">{{ section.settings.link_text }}</a>
      </div>
    </div>
  </div>
</div>

<style>
  .video-with-text-overlay__container {
    position: relative;
  }
  .video-with-text-overlay__video {
    width: 100%;
    height: auto;
    object-fit: cover;
    max-width: 100%;
    display: block;
    min-height: 750px;
  }
  .video-with-text-overlay__iframe-wrapper {
    position: relative;
    padding-bottom: 56.25%;
    /* padding-top: 25px; */
    /* width: 300%; */
    /* left: -100%; */
  }
  .video-with-text-overlay__iframe-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }
  .video-with-text-overlay__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-wrap: wrap;
    background: #0000003d;
    align-items: center;
    padding: 50px;
  }
  .video-with-text-overlay__overlay-content {
    max-width: 480px;
  }
  .video-with-text-overlay__overlay-content h2 {
    line-height: 1.3;
    margin-bottom: 15px;
    color: white;
  }
  .video-with-text-overlay__overlay-content p {
    color: white;
    font-weight: 600;
    margin-bottom: 40px;
  }
  .video-with-text-overlay__overlay-content a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  @media screen and (max-width: 992px) {
    .video-with-text-overlay__overlay-content h2 {
      font-size: 42px !important;
    }
  }
  @media screen and (max-width: 767px) {
    .video-with-text-overlay__overlay {
      padding: 30px;
    }
  }
</style>


{% schema %}
  {
    "name": "Video with text overlay",
    "class": "section--video",
    "settings": [
      {
        "type": "video_url",
        "id": "video_url",
        "accept": [
          "youtube", "vimeo"
        ],
        "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
        "label": "Background Video Url",
        "placeholder": "t:sections.video.settings.video_url.placeholder"
      },
      {
        "type": "url",
        "id": "video",
        "label": "Local Video Url"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Your heading here"
      },
      {
        "type": "select",
        "id": "heading_size",
        "label": "Heading Size",
        "options": [
          {
            "value": "42px",
            "label": "Small"
          }, {
            "value": "55px",
            "label": "Medium"
          }, {
            "value": "72px",
            "label": "Large"
          }
        ],
        "default": "55px"
      }, {
        "type": "checkbox",
        "id": "heading_underline",
        "label": "Underline Heading",
        "default": true
      }, {
        "type": "textarea",
        "id": "subheading",
        "label": "Subheading",
        "default": "Your subheading here"
      }, {
        "type": "text",
        "id": "link_text",
        "label": "Link text",
        "default": "Your text here"
      }, {
        "type": "url",
        "id": "link",
        "label": "Link"
      }, {
        "type": "select",
        "id": "overlay_content_align",
        "label": "Overlay Content alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left"
      }
    ],
    "presets": [
      {
        "name": "Video with text overlay"
      }
    ]
  }
{% endschema %}